{
  "name": "platzivideos-backend",
  "version": "1.0.0",
  "description": "PlatziVideos API built in Node.js",
  "main": "index.js",
  "scripts": {
    "dev": "cross-env DEBUG=app:* nodemon index",
    "start": "cross-env NODE_ENV=production node index",
    "test": "mocha --exit",
    "cover": "nyc npm run test",
    "report": "nyc report --reporter=html && wslview coverage/index.html",
    "docker:build": "docker build . -t platzivideos-api",
    "docker:run": "docker run -p 3001:3001 -d platzivideos-api",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JoseGutierrez02/PlatziVideos-Backend.git"
  },
  "keywords": [
    "Node.js"
  ],
  "author": "Jose Gutierrez",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JoseGutierrez02/PlatziVideos-Backend/issues"
  },
  "homepage": "https://github.com/JoseGutierrez02/PlatziVideos-Backend#readme",
  "dependencies": {
    "@hapi/boom": "^9.1.4",
    "@hapi/joi": "^17.1.1",
    "bcryptjs": "^2.4.3",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.6.9",
    "passport": "^0.4.1",
    "passport-http": "^0.3.0",
    "passport-jwt": "^4.0.0"
  },
  "devDependencies": {
    "chalk": "^4.1.2",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "mocha": "^8.4.0",
    "nodemon": "^2.0.7",
    "nyc": "^15.1.0",
    "prettier": "^2.3.0",
    "proxyquire": "^2.1.3",
    "sinon": "^11.1.1",
    "supertest": "^6.1.3"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix"
  },
  "nyc": {
    "all": true,
    "include": [
      "routes",
      "services",
      "lib",
      "utils"
    ]
  }
}
